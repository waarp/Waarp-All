<rule>
  <idrule>loop</idrule>
  <mode>1</mode>
  <rpretasks>
    <tasks>
      <task>
        <type>LOG</type>
        <path>mon info</path>
        <delay>0</delay>
        <rank>0</rank>
      </task>
    </tasks>
  </rpretasks>
  <rposttasks>
    <tasks>
      <task>
        <type>LOG</type>
        <path>petittest</path>
        <delay>0</delay>
        <rank>0</rank>
      </task>
      <task>
        <type>MOVERENAME</type>
        <path>#OUTPATH#/#ORIGINALFILENAME#</path>
        <delay/>
        <rank>1</rank>
      </task>
      <task>
        <type>TRANSFER</type>
        <path>-file #OUTPATH#/#ORIGINALFILENAME# -to #REQUESTERHOST# -rule
          loop
        </path>
        <delay/>
        <rank>2</rank>
      </task>
    </tasks>
  </rposttasks>
  <rerrortasks>
    <tasks>
      <task>
        <type>LOG</type>
        <path>erreur</path>
        <delay>1</delay>
        <rank>0</rank>
      </task>
    </tasks>
  </rerrortasks>
  <serrortasks>
    <tasks>
      <task>
        <type>LOG</type>
        <path>erreur</path>
        <delay>1</delay>
        <rank>0</rank>
      </task>
    </tasks>
  </serrortasks>
  <sposttasks>
    <tasks>
      <task>
        <type>DELETE</type>
        <path/>
        <delay/>
      </task>
    </tasks>
  </sposttasks>
</rule>